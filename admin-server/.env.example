# Database
MONGODB_URI=mongodb://localhost:27017/luxecommerce
DB_NAME=luxecommerce

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (NodeMailer)
EMAIL_FROM=admin@luxecommerce.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Customer Server URL
CUSTOMER_SERVER_URL=http://localhost:5000

# Admin Dashboard URL
ADMIN_DASHBOARD_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
BCRYPT_SALT_ROUNDS=12

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# Admin Settings
DEFAULT_ADMIN_EMAIL=admin@luxecommerce.com
DEFAULT_ADMIN_PASSWORD=AdminPassword123!
SUPER_ADMIN_KEY=your_super_admin_key_here
